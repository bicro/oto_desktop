{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Oto Desktop",
  "version": "0.1.0",
  "identifier": "com.oto.desktop",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Oto Desktop",
        "width": 800,
        "height": 600,
        "resizable": true,
        "skipTaskbar": false
      },
      {
        "label": "overlay",
        "title": "Overlay",
        "url": "overlay.html",
        "visible": false,
        "transparent": true,
        "decorations": false,
        "shadow": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "width": 400,
        "height": 600,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://cubism.live2d.com; style-src 'self' 'unsafe-inline'; img-src 'self' asset: localfile: http://localfile.localhost https: data: blob:; connect-src 'self' asset: http://asset.localhost http://localfile.localhost https://api.openai.com https://storage.googleapis.com; worker-src 'self' blob:; font-src 'self' data:",
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "$APPDATA/**",
            "$LOCALAPPDATA/**",
            "$APPDATA/com.oto.desktop/**/*",
            "$LOCALAPPDATA/com.oto.desktop/**/*"
          ],
          "requireLiteralLeadingDot": false
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "-",
      "hardenedRuntime": true,
      "entitlements": null
    },
    "windows": {
      "nsis": {
        "installMode": "perMachine"
      }
    }
  }
}
